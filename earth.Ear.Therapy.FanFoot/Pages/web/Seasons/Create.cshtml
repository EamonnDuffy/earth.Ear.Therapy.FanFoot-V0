@page
@model earth.Ear.Therapy.FanFoot.Pages.web.Seasons.CreateModel
@*
    @{
        ViewData["Title"] = "Create";
    }
*@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<h1>Create A New Fantasy Football Season</h1>

@if (Model.LastSeasons != null)
{
    <p>Last Fantasy Football Seasons:</p>
    <table class="seasons">
        <thead>
            <tr>
                <th>Id</th>
                <th>Begin Date</th>
                <th>End Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var seasonEntity in Model.LastSeasons)
            {
                <tr>
                    <td>@seasonEntity.SeasonId</td>
                    <td>@seasonEntity.BeginDateTimeUtc.ToString("yyyy-MMM-dd")</td>
                    <td>@seasonEntity.EndDateTimeUtc.ToString("yyyy-MMM-dd")</td>
                    <td>@seasonEntity.Description</td>
                </tr>
            }
        </tbody>
    </table>

    <br />
}

@if (Model.IsGet)
{
    <form method="POST">
        <div>Season Description: <input type="text" asp-for="Description"/></div>
        <div>Season Date - Begin: <input type="date" asp-for="BeginDateTimeUtc" asp-format="{0:yyyy-MM-dd}"/></div>
        <div>Season Date - End: <input type="date" asp-for="EndDateTimeUtc" asp-format="{0:yyyy-MM-dd}"/></div>
        <br />
        <p><b>NOTE:</b> To enable Results to be obtained <i>after</i> the Real Season has ended, please add 2 weeks or more (depending on Public Holidays) to the end of the Real Season when entering the Fantasy Football Season <b>End</b> Date above.</p>
        <br />
        <input type="submit" name="Action" value="Create"/>
        <input type="submit" name="Action" value="Cancel"/>
    </form>
}
